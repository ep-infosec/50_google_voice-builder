{
  "extends": [
    "airbnb"
  ],
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": ["off"],
    "no-plusplus": ["error", {"allowForLoopAfterthoughts": true }],
    "indent": ["error", 2],
    "arrow-parens": ["error", "always"],
    "jsx-a11y/href-no-hash": ["off"],
    "jsx-a11y/anchor-is-valid": ["warn", { "aspects": ["invalidHref"] }]
  },
  "globals": {
    "Blob": true,
    "URL": true
  }
}
